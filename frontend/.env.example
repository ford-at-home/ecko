# Frontend Environment Variables

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_PREFIX=/api/v1

# AWS Cognito Configuration
VITE_COGNITO_USER_POOL_ID=
VITE_COGNITO_CLIENT_ID=
VITE_COGNITO_REGION=us-east-1

# S3 Configuration (if needed for direct uploads)
VITE_S3_BUCKET_NAME=echoes-audio-dev
VITE_AWS_REGION=us-east-1

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# App Configuration
VITE_APP_NAME=Echoes Audio Time Machine
VITE_MAX_AUDIO_FILE_SIZE=10485760  # 10MB in bytes
VITE_ALLOWED_AUDIO_FORMATS=webm,wav,mp3,m4a,ogg

# WebSocket Configuration (if needed)
VITE_WS_URL=ws://localhost:8000