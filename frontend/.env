# Echoes Frontend Environment Variables - Local Development

# API Configuration
VITE_API_URL=http://localhost:8000

# AWS Configuration (for LocalStack)
VITE_AWS_REGION=us-east-1

# Cognito Configuration (Placeholder values for local development)
VITE_USER_POOL_ID=local-pool-id
VITE_USER_POOL_CLIENT_ID=local-client-id
VITE_IDENTITY_POOL_ID=local-identity-pool-id

# Local Development Mode
VITE_DEV_MODE=true

# LocalStack Configuration
VITE_LOCALSTACK_ENDPOINT=http://localhost:4566
VITE_S3_BUCKET=echoes-audio-local

# Feature Flags for Local Development
VITE_ENABLE_MOCK_AUTH=true
VITE_ENABLE_DEBUG_MODE=true